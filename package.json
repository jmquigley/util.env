{
  "name": "util.env",
  "version": "0.0.27",
  "author": "jmquigley <jmquigley@outlook.com>",
  "description": "Manages environment type and versioning for a project.",
  "main": "./index.js",
  "types": "./index.d.ts",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmquigley/util.env"
  },
  "bugs": {
    "url": "https://github.com/jmquigley/util.env/issues"
  },
  "engines": {
    "node": ">=7.x"
  },
  "dependencies": {
    "semver": "5.6.0",
    "util.chdir": "0.0.36",
    "util.join": "^0.0.20",
    "util.rstrip": "0.0.39"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.18",
    "@types/semver": "^5.5.0",
    "coveralls": "^3.0.2",
    "debug": "^4.1.1",
    "fs-extra": "^7.0.1",
    "jest": "^23.6.0",
    "lodash": "^4.17.11",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "typescript-babel-jest": "^1.0.5",
    "util.pkgwrap": "^0.0.94"
  },
  "pkgwrap": {
    "cleanup": [
      "index.d.ts",
      "index.js"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "notify": false,
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.ts?$": "typescript-babel-jest"
    },
    "verbose": false
  },
  "scripts": {
    "all": "yarn install && yarn run build && yarn test",
    "build": "yarn run clean && yarn run lint && pkgwrap --build",
    "clean": "pkgwrap --clean",
    "coverage": "pkgwrap --coverage",
    "lint": "pkgwrap --lint",
    "prepublishOnly": "yarn run all",
    "test": "pkgwrap --testing --jest"
  }
}
