{
	"name": "util.env",
	"version": "0.0.33",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Manages environment type and versioning for a project.",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/util.env"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/util.env/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"index.*.min.js",
		"index.d.ts"
	],
	"dependencies": {
		"semver": "5.6.0",
		"util.chdir": "0.0.41",
		"util.join": "^0.0.25",
		"util.rstrip": "0.0.53"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/plugin-transform-modules-umd": "^7.2.0",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.3.4",
		"@types/fs-extra": "^5.0.5",
		"@types/jest": "^24.0.11",
		"@types/lodash": "^4.14.123",
		"@types/node": "^11.11.1",
		"@types/semver": "^5.5.0",
		"babel-minify": "^0.5.0",
		"babel-preset-minify": "^0.5.0",
		"coveralls": "^3.0.3",
		"debug": "^4.1.1",
		"fs-extra": "^7.0.1",
		"jest": "^24.4.0",
		"lodash": "^4.17.11",
		"prettier": "^1.16.4",
		"tslint": "^5.13.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.3333",
		"util.pkgwrap": "^0.0.105"
	},
	"scripts": {
		"all": "yarn install && yarn build && yarn test && yarn manifest",
		"build": "yarn clean && yarn lint && yarn prettier && yarn build:es && yarn build:umd",
		"build:es": "tsc -p . && minify index.js --out-file index.es.min.js",
		"build:umd": "babel index.js --out-file index.umd.min.js",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"lint": "pkgwrap --lint",
		"manifest": "npm pack --dry-run",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"test": "jest"
	}
}
